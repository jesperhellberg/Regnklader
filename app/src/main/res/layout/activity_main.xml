            <!--android:text="@string/newText"-->
            <!--android:textSize="20sp"-->
            <!--android:id="@+id/output"-->
            <!--android:gravity="center"-->

            <!--/>-->


        <!--</ScrollView>-->

    </android.support.v4.widget.SwipeRefreshLayout>



    </LinearLayout>






